{
  "manifest_version": 2,

  "name": "xinglarger",
  "description": "Xing Profile Picture Enlarger",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.xing.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/enlargeprofilepicture.js",
        "js/info.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    },
    "default_popup": "html/info.html"
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}